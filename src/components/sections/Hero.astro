---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";

interface Video {
    mp4: string;
    webm: string;
    poster: string;
    width: number;
    height: number;
}

const firstFrameImage = "/images/video1-first-frame.webp";
const videos: Video[] = [
    {
        mp4: "/videos/video1.mp4",
        webm: "/videos/video1.webm",
        poster: firstFrameImage,
        width: 380,
        height: 760
    },
    {
        mp4: "/videos/video2.mp4",
        webm: "/videos/video2.webm",
        poster: firstFrameImage,
        width: 380,
        height: 760
    },
    {
        mp4: "/videos/video3.mp4",
        webm: "/videos/video3.webm",
        poster: firstFrameImage,
        width: 380,
        height: 760
    },
    {
        mp4: "/videos/video4.mp4",
        webm: "/videos/video4.webm",
        poster: firstFrameImage,
        width: 380,
        height: 760
    }
];
---

<section id="hero" class="relative pt-1 lg:pt-36">
    <div class="fixed inset-0 pointer-events-none overflow-hidden" aria-hidden="true">
        <span class="w-4/12 lg:w-2/12 aspect-square bg-gradient-to-tr from-primary to-green-400 absolute -top-5 lg:left-0 rounded-full skew-y-12 blur-2xl opacity-40 skew-x-12 rotate-90"></span>
        <span class="absolute -left-6 md:left-4 top-24 lg:top-28 w-24 h-24 rotate-90 skew-x-12 rounded-3xl bg-green-400 blur-xl opacity-60 lg:opacity-95 lg:block hidden"></span>
        <span class="absolute right-4 bottom-12 w-24 h-24 rounded-3xl bg-primary blur-xl opacity-80"></span>
    </div>

    <Container className={"flex flex-col lg:flex-row gap-10 lg:gap-12"}>
        <div class="relative flex flex-col items-center text-center lg:text-left lg:py-7 xl:py-8 
        lg:items-start lg:max-w-none max-w-3xl mx-auto lg:mx-0 lg:flex-1 lg:w-1/2">
            
            <h1 class="hero-title">
                <span class="hero-text">We Transform</span>
                <span class="hero-text">Influencers</span>
                <span class="gradient-text">into Revenue</span>
                <span class="gradient-text">Machines</span>
                <span class="hero-text">to Scale Your Brand</span>
            </h1>
            
            <Paragraph className="mt-8">
                We drive exponential revenue growth for your brand through influencer affiliate marketing and social referrals.
            </Paragraph>
            <div class="mt-10 flex justify-center lg:justify-start w-full">
                <div class="flex sm:flex-row flex-col gap-5">
                    <a href="#calendly-section">
                        <Button variant={"primary"} className={"min-w-max text-white"}>
                            <span class="flex relative z-[5]">
                                Get in touch
                            </span>
                        </Button>
                    </a>
                </div>
            </div>
        </div>

        <div class="flex flex-1 lg:w-1/2 lg:h-auto relative lg:max-w-none lg:mx-0 mx-auto max-w-3xl">
            <div class="phone-frame">
                <div class="video-container" data-loading="true">
                    {videos.map((video, index) => (
                        <video 
                            class={`phone-video ${index === 0 ? 'active' : ''}`}
                            muted 
                            playsinline
                            autoplay
                            webkit-playsinline="true"
                            x-webkit-airplay="deny"
                            preload={index === 0 ? "auto" : "none"}
                            data-index={index}
                            poster={video.poster}
                            width={video.width}
                            height={video.height}
                            aria-label={`Promotional video ${index + 1}`}
                        >
                            <source 
                                src={video.mp4} 
                                type="video/mp4"
                            />
                            <source 
                                src={video.webm} 
                                type="video/webm"
                            />
                        </video>
                    ))}
                </div>
            </div>
        </div>
    </Container>
</section>

<style>
    .phone-frame {
        position: relative;
        width: 300px;
        height: 600px;
        margin: 0 auto;
        border-radius: 40px;
        background: var(--phone-frame-color);
        padding: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border: 8px solid var(--phone-frame-color);
        overflow: hidden;
        transform: translateZ(0);
        -webkit-transform: translateZ(0);
    }

    .phone-frame::before {
        content: '';
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 150px;
        height: 25px;
        background: var(--phone-frame-color);
        border-bottom-left-radius: 20px;
        border-bottom-right-radius: 20px;
        z-index: 2;
    }

    .video-container {
        position: relative;
        width: 100%;
        height: 100%;
        border-radius: 30px;
        overflow: hidden;
        transform: translateZ(0);
        -webkit-transform: translateZ(0);
        -webkit-mask-image: -webkit-radial-gradient(white, black);
    }

    .phone-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0;
        transform: translateY(100%);
        will-change: transform, opacity;
        -webkit-transform: translateY(100%);
        backface-visibility: hidden;
        -webkit-backface-visibility: hidden;
        transform: translateZ(0);
        -webkit-transform: translateZ(0);
        transition: transform 1s ease-out, opacity 0.5s ease-out;
    }

    .phone-video.active {
        opacity: 1;
        transform: translateY(0);
        -webkit-transform: translateY(0);
    }

    .phone-video.previous {
        transform: translateY(-100%);
        -webkit-transform: translateY(-100%);
        opacity: 1;
    }

    @media (min-width: 1024px) {
        .phone-frame {
            width: 380px;
            height: 760px;
        }
    }

    .hero-title {
        font-size: clamp(2rem, 5vw, 3.75rem);
        line-height: 1.1;
        font-weight: 700;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        contain: content;
        will-change: transform;
    }

    @media (min-width: 1024px) {
        .hero-title {
            align-items: flex-start;
            text-align: left;
        }
    }

    .hero-text {
        display: block;
        color: var(--text-heading);
    }

    .gradient-text {
        display: block;
        background-image: linear-gradient(90deg, #4f46e5 0%, #06b6d4 50%, #22c55e 100%);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        background-size: 200% 100%;
        animation: gradient-shift 8s ease infinite;
    }

    @keyframes gradient-shift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    @media (prefers-reduced-motion: reduce) {
        .gradient-text {
            animation: none;
            background-size: 100% 100%;
            background-position: 0 0;
        }
    }

    :root {
        --text-heading: #1a1a1a;
        --phone-frame-color: rgba(241, 245, 249, 0.8);
    }

    :root.dark {
        --text-heading: #ffffff;
        --phone-frame-color: #12223b6e;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const videos = document.querySelectorAll('.phone-video');
        let currentIndex = 0;
        let isTransitioning = false;
        const TRANSITION_DURATION = 2000;

        const playVideo = async (video: HTMLVideoElement) => {
            try {
                video.currentTime = 0;
                await video.play();
            } catch (error) {
                console.error('Playback failed:', error);
                // Retry play on user interaction
                const playOnInteraction = async () => {
                    try {
                        await video.play();
                        document.removeEventListener('touchstart', playOnInteraction);
                        document.removeEventListener('click', playOnInteraction);
                    } catch (e) {
                        console.error('Retry failed:', e);
                    }
                };
                document.addEventListener('touchstart', playOnInteraction);
                document.addEventListener('click', playOnInteraction);
            }
        };

        const switchVideo = async () => {
            if (isTransitioning) return;
            isTransitioning = true;

            const currentVideo = videos[currentIndex] as HTMLVideoElement;
            const nextIndex = (currentIndex + 1) % videos.length;
            const nextVideo = videos[nextIndex] as HTMLVideoElement;

            // Précharge et prépare la prochaine vidéo
            if (nextVideo.preload === 'none') {
                nextVideo.preload = 'auto';
            }

            try {
                // Prépare la prochaine vidéo
                nextVideo.style.transform = 'translateY(100%)';
                nextVideo.style.opacity = '1';
                await playVideo(nextVideo);

                // Animation de transition
                currentVideo.classList.remove('active');
                currentVideo.classList.add('previous');
                nextVideo.classList.add('active');

                // Nettoie l'ancienne vidéo après la transition
                setTimeout(() => {
                    currentVideo.classList.remove('previous');
                    isTransitioning = false;

                    // Planifie la prochaine transition
                    if (nextIndex === videos.length - 1) {
                        // Pour la dernière vidéo, attendre sa fin naturelle
                        nextVideo.addEventListener('ended', () => {
                            currentIndex = 0;
                            switchVideo();
                        }, { once: true });
                    } else {
                        setTimeout(() => switchVideo(), TRANSITION_DURATION);
                    }
                }, 1000);

                currentIndex = nextIndex;
            } catch (error) {
                console.error('Switch failed:', error);
                isTransitioning = false;
            }
        };

        // Initialisation
        const initializeCarousel = async () => {
            const firstVideo = videos[0] as HTMLVideoElement;
            
            // Attendre que la vidéo soit chargée
            if (firstVideo.readyState >= 2) {
                await playVideo(firstVideo);
                setTimeout(() => switchVideo(), TRANSITION_DURATION);
            } else {
                firstVideo.addEventListener('loadeddata', async () => {
                    await playVideo(firstVideo);
                    setTimeout(() => switchVideo(), TRANSITION_DURATION);
                }, { once: true });
            }
        };

        // Force play on iOS
        const forcePlayOnInteraction = () => {
            const currentVideo = videos[currentIndex] as HTMLVideoElement;
            playVideo(currentVideo);
            document.removeEventListener('touchstart', forcePlayOnInteraction);
            document.removeEventListener('click', forcePlayOnInteraction);
        };

        document.addEventListener('touchstart', forcePlayOnInteraction);
        document.addEventListener('click', forcePlayOnInteraction);

        // Démarrer le carrousel
        initializeCarousel();
    });
</script>